<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_bt_setting_load_view"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bt_setting_load_view_bg"
        android:padding="20dp">

        <ProgressBar
            android:id="@+id/pro_bar_bt_setting_connect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:indeterminateTint="#CCFFFFFF" />

        <TextView
            android:id="@+id/tv_bt_setting_load_view_connect_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pro_bar_bt_setting_connect"
            android:text="连接状态" />
    </RelativeLayout>


</RelativeLayout>